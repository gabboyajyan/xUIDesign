{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist/types",
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"rootDir": "./lib",
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"lib/*"
			]
		}
	},
	"include": [
		"lib"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}