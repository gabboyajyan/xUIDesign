{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/esm/types",
    "module": "ESNext",
    "target": "ESNext",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./lib/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true
  },
  "include": [
    "lib",
    "lib/global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
